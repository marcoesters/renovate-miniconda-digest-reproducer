{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        "# renovate:\\s*datasource=(?<datasource>[\\w\\.]+?)\\sARG INSTALLER_URL\\w*=[\"']https:\\/\\/repo\\.anaconda\\.com\\/\\w+\\/\\w+-(?<currentValue>(py\\d+_)?[\\d\\.]+\\-\\d+?)-(?<depName>[\\w\\-\\.]+?)[\"']\\sARG SHA256SUM\\w*=[\"'](?<currentDigest>[a-f\\d]+?)[\"']\\s"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": [
        "digest.yaml"
      ],
      "matchStrings": [
        "# renovate:\\s*datasource=(?<datasource>[\\w\\.]+?)\\scurrentValue:\\s*(?<currentValue>[\\w]+?)\\scurrentDigest:\\s*(?<currentDigest>[\\w]+?)\\s"
      ]
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["custom.miniconda_installer"],
      "versioning": "regex:^(py\\d+_)?(?<major>\\d+)\\.(?<minor>\\d+)(\\.(?<patch>\\d+))?(\\-(?<build>\\d+))?$"
    }
  ],
  "customDatasources": {
    "miniconda_installer": {
      "defaultRegistryUrlTemplate": "https://repo.anaconda.com/miniconda/.files.json",
      "transformTemplates": [
        "{ \"releases\": [ $map($sift($, function($v, $k) { $not($k.$contains(\"latest\")) and $v.sha256 = $lookup($, \"Miniconda3-latest-{{ packageName }}\").sha256}).$keys(), function($v) { { \"digest\": $lookup($, $v).sha256, \"version\": $contains($v.$split(\"-\")[2], /^[0-9]+$/) ? $v.$split(\"-\")[1] & \"-\" & $v.$split(\"-\")[2] : $v.$split(\"-\")[1] } } ) ] }"
      ]
    },
    "digest": {
      "defaultRegistryUrlTemplate": "https://github.com/marcoesters/renovate-miniconda-digest-reproducer/blob/main/digest.json"
    },
    "major_digest": {
      "defaultRegistryUrlTemplate": "https://github.com/marcoesters/renovate-miniconda-digest-reproducer/blob/main/major_digest.json"
    },
    "major": {
      "defaultRegistryUrlTemplate": "https://github.com/marcoesters/renovate-miniconda-digest-reproducer/blob/main/major.json"
    },
    "minor": {
      "defaultRegistryUrlTemplate": "https://github.com/marcoesters/renovate-miniconda-digest-reproducer/blob/main/minor.json"
    }
  }
}
